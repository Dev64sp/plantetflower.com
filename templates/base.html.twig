		{# Ajout des fonts #}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

		{# Feuille de style CSS #}
		<link href="https://fonts.googleapis.com/css2?family=ABeeZee:ital@0;1&display=swap" rel="stylesheet"> 
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
		<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
		<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
		<link rel="preconnect" href="https://fonts.googleapis.com">

		{# Typo Montserrat #}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
		href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,500;0,600;0,700;1,600&display=swap" rel="stylesheet">

		{# Typo Open Sans #}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400&display=swap" rel="stylesheet">

		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

		{# Favicon du site #}
		<link rel="shortcut icon" href="img/favicon.ico" type="images/x-icon"/>
		
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags("app") }}
			{{ encore_entry_script_tags('slider') }}
			{{ encore_entry_script_tags('burger') }}
		{% endblock %}

	</head>

	<body>
		
		{# Header du site, navbar #}
		<header>
			<nav class="nav">
				<div class="hamburger-menu" id="toggle-button">
					<a href="#" class="close open">
						<div class="menu-line"></div>
						<div class="menu-line"></div>
						<div class="menu-line"></div>
					</a>
				</div>
				<div class="profil" id="toggle-button-profil">
						<a href="#"><img class="img-profil" src="/img/profil.png" alt="Icone profil" /></a>
				</div>
					<a class="logo" href={{ path('app_homepage') }}><img src="/img/Logo_plants.png"/></a>
				<div class="list">
					<ul class="nav-list" id="navi-list">
						<li class="list-item1">
							<a href={{ path('app_homepage') }}>Accueil</a>
						</li>
						<li class="list-item1">
							<a href={{ path('products') }}>Annonces</a>
						</li>
						<li class="list-item1">
							<a href={{ path('about') }}>À propos</a>
						</li>
						<li class="list-item1">
							<a href={{ path('contact') }}>Contact</a>
						</li>
						<li class="list-item1">
							<a href={{ path('faq') }}>FAQ</a>
						</li>
					</ul>
					{% if app.user %}
					<ul class="nav-list" id="navi-list-profil">
						<li class="list-item2">	
							<a href={{ path('profil') }}>Profil</a>
						</li>
						<li class="list-item2">
							<a href={{ path('app_logout') }}>Déconnexion</a>
						</li>

						{% if is_granted('ROLE_ADMIN') %}
                            <li class="list-item2">
                                <a href="{{ path('admin') }}">Admin</a>
                            </li>
                        {% endif %}
					</ul>		
					{% else %}	
					<ul class="nav-list" id="navi-list-profil">
						<li class="list-item2">
							{# <div class="btn-inscription"> #}
								<a href={{ path('app_register') }} class="btn-inscription">Inscription</a>
							{# </div> #}
						</li>
						<li class="list-item2">
							<a href={{ path('app_login') }}>Connexion</a>
						</li>
					</ul>
					{% endif %}
				</div>
			</nav>
		</header>
		{# Fin header du site et de la navbar #}
		<div class="wrapper">	
		{% block body %}{% endblock %}
		</div>
		{# Footer du site #}

		<footer class="">
			<a class="logoFooter titreFooter" href={{ path('app_homepage') }}><img src="/img/Logo_plants.png"/></a>
			<div class="displayFooter">	
				<div class="navFooter" style="flex-direction: row;">
					<div class="lienFooter">
						<h6 class="titreNavFoot">DÉCOUVRIR</h6>
						<a href={{ path('app_homepage') }}>Rechercher son végétal</a>
						<a href={{ path('app_login') }}>Connexion</a>
						<a href={{ path('app_register') }}>Inscription</a>
					</div>
					<div class="lienFooter">
						<h6 class="titreNavFoot">EN SAVOIR PLUS</h6>
						<a href={{ path('about') }}>Notre histoire</a>
						<a href={{ path('contact') }}>Contact</a>
						<a href={{ path('faq') }}>F.A.Q</a>
					</div>
					<div class="lienFooter">
						<h6 class="titreNavFoot">LÉGAL</h6>
						<a href={{ path('mentionslegales') }}>Mentions légales</a>
						<a href={{ path('cgu') }}>CGU - CGV</a>
					</div>
				</div>
					<div class="footer row reseauSocial" style="flex-direction: column;">
						<p style="font-size: 13px">Echangez vos végétaux préférés partout en france</p>
						<div class="row1 icons">
							<a href="https://www.facebook.com/Plantetflower-110812368257334/" target="_BLANK"><img src="https://img.icons8.com/color/48/000000/facebook-new.png" alt="Page Facebook de Plant&Flower"/></a>
							<a href="https://www.instagram.com/plantetflower/" target="_BLANK"><img src="https://img.icons8.com/fluency/48/000000/instagram-new.png" alt="Page Instagram de Plant&Flower"/></a>
						</div>
						<p style="font-size: 11px">
							© 2021-2022 Tous droits réservés — PLANT&FLOWER.COM
						</p>
				</div>
			</div>
		</footer>
	</body>
</html>



